general {
    colors = true
    interval = 5
}

order += "wireless _first_"
order += "battery all"
order += "time"

wireless _first_ {
    format_up = "W: %essid%quality"
    format_down = "W: off"
}

battery all {
    format = "%status %percentage"
    format_down = "No battery"
    status_chr = "Charging"
    status_bat = "Battery"
    status_unk = "Unknown"
    status_full = "Full"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
}

time {
    format = "%H:%M %d/%m"
}
